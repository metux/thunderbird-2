SOURCES += [
    '!../build/msgMapi_i.c',
    'msgMapiFactory.cpp',
    'msgMapiHook.cpp',
    'msgMapiImp.cpp',
    'msgMapiMain.cpp',
    'msgMapiSupport.cpp',
    'Registry.cpp',
]

FINAL_LIBRARY = 'xul'

OS_LIBS += [
    'ole32',
]

DEFINES['UNICODE'] = True
DEFINES['_UNICODE'] = True

# clang-cl rightly complains about switch on nsresult.
if CONFIG['CC_TYPE'] == 'clang-cl':
    CXXFLAGS += ['-Wno-switch']
