            <menuitem id="smileyFoot" class="menuitem-iconic" label="&smiley13Cmd.label;"
                      oncommand="doStatefulCommand('cmd_smiley', ':-!')"/>
            <menuitem id="smileyInnocent" class="menuitem-iconic" label="&smiley14Cmd.label;"
