#ifndef XP_MACOSX
                    label="&quitApplicationCmdUnix.label;"
                    accesskey="&quitApplicationCmdUnix.accesskey;"
#else
                    label="&quitApplicationCmdMac.label;"
                    accesskey="&quitApplicationCmdMac.accesskey;"
#endif
